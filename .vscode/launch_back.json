{
    "version": "0.2.0",
    "configurations":[
        {
            "name": "Launch server.js via npm",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "start",
                "--inspect=9229"
            ],
            "restart": true,
            "port": 9229,
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/build/**/*.js"]
        }

     ]
}